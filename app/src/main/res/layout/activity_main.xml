<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    tools:context="shizhan.killin.com.calculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="bottom">
        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:textSize="50sp"
            android:paddingRight="35sp"
            android:text="0"
            android:textColor="@color/colorAccent"
            android:singleLine="true"
            android:gravity="bottom"
            tools:ignore="RtlCompat" />
    </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarStyle">
                <Button android:id="@+id/bt_AC"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/button_style"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:text="AC"
                    android:textSize="22sp"/>
                <Button android:id="@+id/bt_back"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/button_style"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:text="《x】"
                    android:textSize="22sp"/>
                <Button android:id="@+id/bt_percent"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/button_style"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:text="%"
                    android:textSize="22sp"/>
                <Button android:id="@+id/bt_divide"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/button_style"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:text="/"
                    android:textSize="22sp"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button android:id="@+id/bt_num7"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/button_style"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:text="7"
                    android:textSize="22sp"/>
                <Button android:id="@+id/bt_num8"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/button_style"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:text="8"
                    android:textSize="22sp"/>
                <Button android:id="@+id/bt_num9"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/button_style"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:text="9"
                    android:textSize="22sp"/>
                <Button android:id="@+id/bt_multiply"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/button_style"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:text="*"
                    android:textSize="22sp"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button android:id="@+id/bt_num4"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/button_style"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:text="4"
                    android:textSize="22sp"/>
                <Button android:id="@+id/bt_num5"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/button_style"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:text="5"
                    android:textSize="22sp"/>
                <Button android:id="@+id/bt_num6"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/button_style"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:text="6"
                    android:textSize="22sp"/>
                <Button android:id="@+id/bt_subtract"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/button_style"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:text="-"
                    android:textSize="22sp"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button android:id="@+id/bt_num1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/button_style"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:text="1"
                    android:textSize="22sp"/>
                <Button android:id="@+id/bt_num2"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/button_style"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:text="2"
                    android:textSize="22sp"/>
                <Button android:id="@+id/bt_num3"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/button_style"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:text="3"
                    android:textSize="22sp"/>
                <Button android:id="@+id/bt_plus"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/button_style"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:text="+"
                    android:textSize="22sp"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button android:id="@+id/bt_point"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/button_style"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:text="."
                    android:textSize="22sp"/>
                <Button android:id="@+id/bt_zero"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/button_style"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:text="0"
                    android:textSize="22sp"/>
                <Button android:id="@+id/bt_equal"
                    style="?android:attr/buttonBarButtonStyle"
                    android:background="@drawable/button_style"
                    android:layout_weight="4"
                    android:layout_height="70dp"
                    android:layout_margin="2dp"
                    android:text="="
                    android:textSize="22sp"/>

            </TableRow>

        </TableLayout>

</LinearLayout>
